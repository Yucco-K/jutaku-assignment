{
  "name": "template-nextjs",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "setup": "rimraf node_modules && bun install && cp .env.example .env && bun run db:up && bun run db:migrate && bun run db:seed && npx simple-git-hooks",
    "dev": "cross-env TZ=Etc/UTC next dev --turbopack",
    "build": "prisma migrate deploy && prisma generate && next build",
    "start": "next start",
    "biome:check": "biome check .",
    "biome:apply": "biome check . --apply-unsafe",
    "format": "biome format .",
    "typecheck": "tsc",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "bun run ./prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "test:unit": "bun test --watch",
    "dev-deploy": "vercel",
    "prod-deploy": "vercel --prod",
    "deps:update": "bunx npm-check-updates --interactive --format group",
    "lint": "next lint"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@mantine/core": "^7.17.1",
    "@mantine/dates": "^7.17.1",
    "@mantine/hooks": "^7.7.0",
    "@mantine/modals": "^7.17.1",
    "@mantine/notifications": "^7.17.1",
    "@prisma/client": "^6.5.0",
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.5.2",
    "@supabase/supabase-js": "^2.48.1",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.45.2",
    "@trpc/next": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@vercel/edge-config": "^1.4.0",
    "dayjs": "^1.11.10",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.2.2",
    "next-auth": "^4.24.11",
    "nextjs-routes": "^2.2.5",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.1",
    "react-icons": "^5.0.1",
    "trpc-panel": "^1.3.4",
    "zod": "^3.22.4",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.6.1",
    "@mermaid-js/mermaid-cli": "^11.4.2",
    "@swc/helpers": "^0.5.15",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.13.10",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^6.5.0",
    "prisma-erd-generator": "^2.0.4",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.0",
    "typescript": "^5.8.2",
    "vercel": "^41.4.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run biome:apply"
  }
}
